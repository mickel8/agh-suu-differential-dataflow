apiVersion: apps/v1
kind: Deployment
metadata:
  name: rust-app
  labels:
    app: agh-suu-dd
spec:
  selector:
    matchLabels:
      app: agh-suu-dd
      tier: rust-app
  replicas: 1
  template:
    metadata:
      labels:
        app: agh-suu-dd
        tier: rust-app
    spec:
      containers:
      - name: agh-suu-dd
        image: ${DOCKERHUB_ID}/${DOCKERHUB_REPO}:${DOCKERHUB_REPO_TAG}
        imagePullPolicy: Always
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
        ports:
          - containerPort: 7878
      imagePullSecrets:
        - name: regcred